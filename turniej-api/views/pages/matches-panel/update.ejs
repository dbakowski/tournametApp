<div class="container">
  <h1>Aktualizuj mecz</h1>
  <div class="d-flex justify-content-end" id="button-container">
    <a href="/matches-panel">
      <button type="button" class="btn btn-success">Wróc do listy</button>
    </a>
  </div>
  <form action="/matches-panel/update?id=<%= match.id %>" method="post">
    <div class="form-group">
      <label for="no">No: </label>
      <input value="<%- match.no %>" type="number" class="form-control" name="no" id="no">
    </div>

    <div class="form-group">
      <label for="teamTop">Team góra</label>
      <%- dropdownTop %>
    </div>

    <div class="form-group">
      <label for="teamBottom">Team dół</label>
      <%- dropdownBottom %>
    </div>

    <div class="form-group">
      <label for="isWinnerTop">Czy górny team wygrał: </label>
      <input <%= match.isWinnerTop ? 'checked' : '' %> type="checkbox" class="form-control" name="isWinnerTop" id="isWinnerTop">
    </div>

    <div class="form-group">
      <label for="isWinnerBottom">Czy dolny team wygrał: </label>
      <input <%= match.isWinnerBottom ? 'checked' : '' %> type="checkbox" class="form-control" name="isWinnerBottom" id="isWinnerBottom">
    </div>

    <div class="form-group">
      <label for="scoreTop">Wynik góra: </label>
      <input value="<%= match.scoreTop %>" type="text" class="form-control" name="scoreTop" id="scoreTop">
    </div>

    <div class="form-group">
      <label for="scoreBottom">Wynik dól: </label>
      <input value="<%= match.scoreBottom %>" type="text" class="form-control" name="scoreBottom" id="scoreBottom">
    </div>

    <div class="form-group">
      <label for="date">Data: </label>
      <input value="<%= match.date %>" type="datetime-local" class="form-control" name="date" id="date">
    </div>

    <div class="form-group">
      <button id="submit" class="btn btn-primary" type="submit">Zapisz</button>
    </div>
  </form>
</div>
<script src="/js/matches-panel/validateForm.js"></script>
