<div class="container">
  <h1>Lista graczy</h1>
  <div class="d-flex justify-content-end" id="button-container">
    <a class="pull-right" href="/players-panel/create">
      <button type="button" class="btn btn-outline-primary">Utw√≥rz</button>
    </a>
  </div>
  <table class="table table-dark">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nick</th>
      <th scope="col">Klasa</th>
      <th scope="col">Ranga</th>
      <th scope="col">Akcje</th>
    </tr>
    </thead>
    <tbody id="records">
    <% players.forEach(function (player) { %>
      <tr>
        <th scope="row"><%= player.id %></th>
        <td><%= player.nickname %></td>
        <td><%= player.className %></td>
        <td><%= player.rank %></td>
        <td>
          <a href="/players-panel/view?id=<%= player.id %>"><i class="far fa-eye"></i></a>
          <a href="/players-panel/update?id=<%= player.id %>"><i class="far fa-edit"></i></a>
          <a class="delete" data-nick="<%= player.nickname %>" data-id="<%= player.id %>"><i
              class="far fa-trash-alt"></i></a>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>
<script>
  var isView = true;
</script>
<script src="/js/crud/delete.js"></script>
